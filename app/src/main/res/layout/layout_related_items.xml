<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/releted_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/releted_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/releted_image"
            android:layout_marginTop="@dimen/_8sdp"
            android:maxLines="2"
            android:text="Mxson Men’s Ultra"
            android:fontFamily="@font/robotomedium"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/related_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/releted_product_name"
            android:layout_marginTop="5dp"
            android:text="₹50.00"
            android:fontFamily="@font/robotoregular"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10ssp" />
    </RelativeLayout>
</RelativeLayout>
