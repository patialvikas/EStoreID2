<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorTextGrey</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorTextGrey</item>
        <item name="colorControlNormal">@color/colorTextGrey</item>
        <item name="colorControlActivated">@color/colorBlack</item>
    </style>

    <style name="DialogeTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MyCustomTheme" parent="@android:style/Theme.Panel">
       <!-- <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>-->
        <item name="android:background">#4CAF50</item>

    </style>

</resources>
